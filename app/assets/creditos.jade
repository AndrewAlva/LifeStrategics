extends _templates/layout.jade

mixin credits-row(url, index, concept, author, address)
	.ls-row.credits-row
		a(href="#{url}" target="_blank" rel="nofollow noopener noreferrer").link-container.offset-4.ls-col-16
			.ls-row
				h2.h2.concept.ls-col-xl-12.ls-col-xxl-6
					span._wrap
						span.p2._index(data-cascade="slide-up") #{index}
						span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1") #{concept}


				.name-wrap.offset-xl-1.ls-col-xl-3
					h4.h4._name(data-cascade="slide-up" data-cascade-delay="3" data-cascade-delay-mobile="3") #{author}

				.address-wrap.offset-xl-1.ls-col-xl-5
					.arrow-button._cta(data-cascade="slide-up" data-cascade-delay="6" data-cascade-delay-mobile="6")
						span._label #{address}
						span._icon.right
							+arrow-right("#55c4f0")

				.ls-col-16
					figure._bottom-line(data-cascade="scale-x-left-normal" data-cascade-delay="8" data-cascade-delay-mobile="8")

block header-nav
	+header-nav

block content
	section#credits-page.page-section.inner-padded.preload-hide
		.ls-container
			.ls-row
				.title-wrap.offset-2.ls-col-20.offset-xs-3.ls-col-xs-18.offset-sm-1.ls-col-sm-22.offset-md-2.ls-col-md-20
					h1.h1
						span#credits-animation.dw-highlight.underline.long
							span._text.cascade-mask.inline-block 
								span(data-cascade="mask-up" data-cascade-delay="5" data-cascade-delay-mobile="5") Créditos

							span._scaleDownDouble
								+hl-underline("#55c4f0")


			.ls-row.credits-row
				a(href="#" target="_blank" rel="nofollow noopener noreferrer").link-container.offset-4.ls-col-16
					.ls-row
						h2.h2.concept.ls-col-xl-12.ls-col-xxl-6
							span._wrap
								span.p2._index(data-cascade="slide-up") a.
								span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1") Diseño &
									span._line Desarrollo 
										span.dw-highlight.circle-open-round
											span._text Web.
												+hl-circle-open-round("#55c4f0")

								//- span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1")
									span.dw-highlight.circle-open-long.bolder
										span._text Copywriting
											+hl-circle-open-long("#55c4f0")

									span._line & Contenido


						.name-wrap.offset-xl-1.ls-col-xl-3
							h4.h4._name(data-cascade="slide-up" data-cascade-delay="3" data-cascade-delay-mobile="3") Andrew Alva

						.address-wrap.offset-xl-1.ls-col-xl-5
							.arrow-button._cta(data-cascade="slide-up" data-cascade-delay="6" data-cascade-delay-mobile="6")
								span._label andrew.studio
								span._icon.right
									+arrow-right("#55c4f0")

						.ls-col-16
							figure._bottom-line(data-cascade="scale-x-left-normal" data-cascade-delay="8" data-cascade-delay-mobile="8")

			+credits-row("#", "b.", "Copywriting & Contenido.", "Mónica de Salazar", "monixette@me.com")

			+credits-row("https://garagefonts.com/", "c.", "Diseño Tipográfico.", "Freight Neo Pro / GarageFonts", "garagefonts.com")


	.only-mobile.not-scroll-js
		include _modules/footer.jade










