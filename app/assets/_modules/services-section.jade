mixin service-card-content(description, intro, servicePractices)
	.text-wrap
		.inner-container
			._description.p2
				span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1") #{description}

			.profiles-container
				._note.p3
					span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1") #{intro}

				.profile-wrap
					//- ._name.p2
						span(data-cascade="slide-up" data-cascade-delay="2" data-cascade-delay-mobile="2") For new and existing projects.
					
					ul._methods
						for n, i in servicePractices
							- var cascadeIndex = i + 2

							//- li(class="p3 #{n.color}")
							li.p3.blue
								span(data-cascade="rotate-up" data-cascade-delay=cascadeIndex data-cascade-delay-mobile=cascadeIndex)= n.name

				//- .profile-wrap
					._name.p2
						span(data-cascade="slide-up" data-cascade-delay="2" data-cascade-delay-mobile="2") For teams and people.
					
					ul._methods
						for n, i in peopleMethods
							- var cascadeIndex = i + 2

							li(class="p3 #{n.color}")
								span(data-cascade="rotate-up" data-cascade-delay=cascadeIndex data-cascade-delay-mobile=cascadeIndex)= n.name



