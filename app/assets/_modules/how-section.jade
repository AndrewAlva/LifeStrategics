mixin how-bullet(index, name, width, offset, ...bullets)
	div(class="bullet-row #{width} #{offset}")
		h2.h1.name-wrap
			span._index.h4.motion-cascade(data-cascade="rotate-up" data-cascade-delay="0") #{index}
			|#{name}

		.line-wrap

		.bullets-wrap
			ul.center-container
				each bullet, index in bullets
					- var fixedIndex = (index + 1)
					li.p2.motion-cascade(data-cascade="rotate-up" data-cascade-delay=index data-cascade-delay-mobile=index) #{fixedIndex}. #{bullet}

