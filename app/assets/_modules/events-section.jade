mixin event-row(index, title, imgSrc, date, location, cta, href)
	.ls-row.event-row
		a(href="#{href}" target="_blank" rel="nofollow noopener noreferrer").link-container.motion-cascade.offset-2.ls-col-21.offset-xs-3.ls-col-xs-18.offset-sm-2.ls-col-sm-21.ls-col-xl-20.offset-xxl-3.ls-col-xxl-18
			.ls-row
				h2.h2._title.ls-col-20.ls-col-xs-18.ls-col-sm-10.ls-col-lg-11.ls-col-xl-12.ls-col-xxl-10
					span._wrap
						span.p2._index(data-cascade="rotate-up") #{index}
						span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1") #{title}

				._cover.ls-col-10.ls-col-xs-6.offset-sm-1.ls-col-sm-4.offset-xl-1.ls-col-xl-3
					.image-wrap(data-cascade="slide-up" data-cascade-delay="3" data-cascade-delay-mobile="3")
						img(src="#{imgSrc}", alt="#{title} cover photo")

				._abstract.offset-1.ls-col-10.offset-xs-3.ls-col-xs-7.offset-sm-1.ls-col-sm-5.ls-col-lg-4.offset-xl-1.ls-col-xl-3
					._info
						h4.h4._date(data-cascade="slide-up" data-cascade-delay="4" data-cascade-delay-mobile="4") #{date}
						p.p3._location(data-cascade="slide-up" data-cascade-delay="5" data-cascade-delay-mobile="5") #{location}

					.arrow-button._cta(data-cascade="slide-up" data-cascade-delay="6" data-cascade-delay-mobile="6")
						span._label #{cta}
						span._icon.right
							+arrow-right("#f6eb30")



