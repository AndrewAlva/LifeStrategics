mixin event-row(index, title, imgSrc, date, location, cta, href)
	.ls-row.event-row.motion-cascade
		h2.h2._title.ls-col-20.offset-2.ls-col-xs-18.offset-xs-3.ls-col-sm-10.offset-sm-2.ls-col-lg-11.ls-col-xl-12.ls-col-xxl-10.offset-xxl-3
			span._wrap
				span.p2._index(data-cascade="rotate-up") #{index}
				span(data-cascade="slide-up" data-cascade-delay="1" data-cascade-delay-mobile="1") #{title}

		._cover.ls-col-10.offset-2.ls-col-xs-6.offset-xs-3.ls-col-sm-4.offset-sm-1.ls-col-xl-3.offset-xl-1
			img(src="#{imgSrc}", alt="#{title} cover photo" data-cascade="slide-up" data-cascade-delay="3" data-cascade-delay-mobile="3")

		._abstract.ls-col-10.offset-1.ls-col-xs-7.offset-xs-3.ls-col-sm-5.offset-sm-1.ls-col-lg-4.ls-col-xl-3.offset-xl-1
			._info
				h4.h4._date(data-cascade="slide-up" data-cascade-delay="4" data-cascade-delay-mobile="4") #{date}
				p.p2._location(data-cascade="slide-up" data-cascade-delay="5" data-cascade-delay-mobile="5") #{location}

			a.arrow-button.--big._cta(href="#{href}" target="_blank" rel="nofollow noopener noreferrer" data-cascade="slide-up" data-cascade-delay="6" data-cascade-delay-mobile="6")
				span._label #{cta}
				span._icon.right
					+arrow-right("#55c4f0")



